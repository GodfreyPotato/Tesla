@model tesla.Models.Register

@*
      ViewData["Title"] = "Register";
*@

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="d-flex justify-content-center align-items-center pt-5" style="height: 100vh;">
    <div class="card p-5 rounded" style="min-width: 700px;">
        <form asp-action="Register" method="post">
            <div class="row">

                <h2 style="font-size:15px;"> Register Account </h2>
                <br />


                <!-- Left -->
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="firstname">Firstname</label>
                        <input asp-for="firstname" class="form-control" />
                        <span asp-validation-for="firstname" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="middlename">Middlename</label>
                        <input asp-for="middlename" class="form-control" />
                        <span asp-validation-for="middlename" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="lastname">Lastname</label>
                        <input asp-for="lastname" class="form-control" />
                        <span asp-validation-for="lastname" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right -->
                <div class="col-md-6">
                    <div class="form-group mb-4">
                        <label asp-for="address">Address</label>
                        <input asp-for="address" class="form-control" />
                        <span asp-validation-for="address" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="email">Email</label>
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="password">Password</label>
                        <input asp-for="password" class="form-control" type="password" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <input type="submit" value="Register" class="btn btn-primary w-100" />
                    </div>

                    <br />
                    <div class="text-center">
                        <a asp-action="Login">Already have an account? Login</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>