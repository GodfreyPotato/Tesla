@{
    ViewData["Title"] = " Electric Cars, Solar & Clean Energy";
}
@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}


<!-- Hero Section with Background -->
<section class="hero-section position-relative text-white">
    <video autoplay muted loop playsinline class="hero-video">
        <source src="~/contents/teslavid.mp4" type="video/mp4" />
        Your browser does not support the video tag.
    </video>

    <div class="video-overlay"></div>

    <div class="hero-content position-absolute top-50 start-50 translate-middle text-center">
        <h1 class="display-3 fw-bold mb-3">Experience the Future</h1>
        <p class="lead mb-4">Electric driving redefined. Discover innovation with Tesla.</p>
        <a href="#" class="btn btn-light btn-lg d-inline-block px-4">Explore</a>
    </div>
</section>

<section class="text-center py-5">
    <h2>Shop Tesla Vehicles</h2>

    <div class="row justify-content-center mt-4">
        <!-- Card 1 -->
        <div class="col-md-5 mb-4">
            <div class="vehicle-card p-4 bg-light rounded">
                <div class="row align-items-center">
                    <!-- Text -->
                    <div class="col-7 text-start">
                        <h3>Model 3</h3>
                        <p>Affordable electric sedan with top-notch features.</p>
                        <p><b>From $37,490</b></p>
                        <button class="order-btn">Order now</button>
                        <button class="learn-more-btn">Learn more</button>
                    </div>
                    <!-- Image -->
                    <div class="col-5 text-end">
                        <img src="~/images/sample-product-pic.png" alt="Model 3" class="img-fluid rounded" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="col-md-5 mb-4">
            <div class="vehicle-card p-4 bg-light rounded">
                <div class="row align-items-center">
                    <!-- Text -->
                    <div class="col-7 text-start">
                        <h3>Model Y</h3>
                        <p>The new electric sedan with top-notch features.</p>
                        <p><b>From $48,490</b></p>
                        <button class="order-btn">Order now</button>
                        <button class="learn-more-btn">Learn more</button>
                    </div>
                    <!-- Image -->
                    <div class="col-5 text-end">
                        <img src="~/images/sample-product-pic.png" alt="Model 3" class="img-fluid rounded" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a class="nav-link" asp-controller="Product" asp-action="ShowProducts">
        <button class="more-products-btn">
            More products <img src="~/images/arrow-right.svg" alt="arrow" class="arrow-icon" />
        </button>
    </a>

</section>

<section class="text-center py-5">
    <div class="container px-4">
        <!-- Image -->
        <img src="~/images/charging-map.jpg" alt="Charging Map" class="img-fluid rounded" />

        <!-- Texts -->
        <div class="row mt-4 align-items-center">
            <!-- Left text -->
            <div class="col-md-6 text-md-start text-center">
                <h2 class="mb-0">Charging now<br>in the Philippines</h2>
                <button style="background-color: black; color: white; border-radius: 6px; margin-top: 0.7rem;">Learn more</button>
            </div>

            <!-- Right text group -->
            <div class="col-md-6 text-md-end text-center">
                <div class="d-flex justify-content-md-end justify-content-center align-items-center mb-2">
                    <img src="~/images/supercharger.svg" alt="supercharger" class="map-icons me-2" />
                    <h2 class="mb-0" style="color: red;">9 Superchargers</h2>
                </div>
                <div class="d-flex justify-content-md-end justify-content-center align-items-center">
                    <img src="~/images/destination-charger.svg" alt="destination charger" class="map-icons me-2" />
                    <h2 class="mb-0">2 Destination Chargers</h2>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="text-center py-5">
    <h2>Shop Tesla Energy</h2>

    <div class="row justify-content-center mt-4">
        <!-- Card 1 -->
        <div class="col-md-5 mb-4">
            <div class="vehicle-card p-4 bg-light rounded">
                <div class="row align-items-center">
                    <!-- Text -->
                    <div class="col-7 text-start">
                        <h3>Solar Roof</h3>
                        <p>Affordable electric sedan with top-notch features.</p>
                        <p><b>From $7,490</b></p>
                        <button class="order-btn">Order now</button>
                        <button class="learn-more-btn">Learn more</button>
                    </div>
                    <!-- Image -->
                    <div class="col-5 text-end">
                        <img src="~/images/sample-product-pic.png" alt="Model 3" class="img-fluid rounded" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="col-md-5 mb-4">
            <div class="vehicle-card p-4 bg-light rounded">
                <div class="row align-items-center">
                    <!-- Text -->
                    <div class="col-7 text-start">
                        <h3>Solar Power</h3>
                        <p>Affordable electric sedan with top-notch features.</p>
                        <p><b>From $13,490</b></p>
                        <button class="order-btn">Order now</button>
                        <button class="learn-more-btn">Learn more</button>
                    </div>
                    <!-- Image -->
                    <div class="col-5 text-end">
                        <img src="~/images/sample-product-pic.png" alt="Model 3" class="img-fluid rounded" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a class="nav-link" asp-controller="Product" asp-action="ShowProducts">
        <button class="more-products-btn">
            More products <img src="~/images/arrow-right.svg" alt="arrow" class="arrow-icon" />
        </button>
    </a>

</section>
